    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^15.0.0",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^5.1.13",
    "svelte-check": "^4.0.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.3"
  },
  "type": "module",
  "dependencies": {
